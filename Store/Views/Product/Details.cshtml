@model Store.Models.Album
@{
    int i = 1;
}
@if (Model != null)
{
    <div class="container">
        <div class="card">
            <div class="container-fliud">
                <div class="wrapper row">
                    <div class="preview col-md-6">

                        <div class="preview-pic tab-content">
                            <div class="tab-pane active" id="pic-1"><img src="@Model.Images[0].Url" height="400" width="252" /></div>
                        </div>
                    </div>
                    <div class="details col-md-6">
                        <h3 class="product-title">@Model.Name</h3>
                        <div class="rating">
                        </div>
                        <p class="product-description">
                            @Model.Artists.FirstOrDefault().Name album. released in @Model.ReleaseDate <br /> <br /> Songs: @foreach (var tracks in @Model.Tracks.Items.ToList())
                            {
                                <br /> @: @i @tracks.Name
                                i++;
                            }
                        <p>Order now!!.</p>
                        <h4 class="price">now: <span>@Model.Price</span></h4>
                        <p class="vote">with <strong> @Model.Discount %</strong> cashback ($@Model.Cashback)</p>

                        <div class="action">
                            <a href="@Url.Action("AddToCart", "ShoppingCart", new { id = Model.Id, price = Model.Price, genre = Model.Genre })
" class="add-to-cart btn btn-default" type="button">add to cart</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
else
{
    //rredirec para 404
}